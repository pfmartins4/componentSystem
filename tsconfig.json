{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": "./src/",
    "paths": {
      "asstes/**": ["assets/**"],
      "components/**": ["components/**"],
      "helpers/**": ["helpers/**"],
      "styles/**": ["stylest/**"]
    }
  },
  "include": ["./src/"]
}
